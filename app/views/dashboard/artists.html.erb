<%- model_class = Artist -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%- if flash[:notice] -%>
  <div class="span4">  
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= flash[:notice] %>
    </div>
  </div>
<%- end -%>

<table class="table table-bordered table-striped artists-admin">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:bio) %></th>
      <th>Tier</th>
      <th><%= model_class.human_attribute_name(:official_url) %></th>
      <th><%= model_class.human_attribute_name(:youtube_url) %></th>
      <th><%= model_class.human_attribute_name(:soundcloud_url) %></th>
      <th>Images</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>

  </thead>
  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td class='artist-name'><%= link_to artist.name, edit_artist_path(artist) %></td>
        <td class='artist-bio'><%= raw popup(artist.bio,'popover', "Bio") %></td>
        <td><strong><%= artist.tier %></strong></td>
        <td><%= raw popup(artist.official_url,'tooltip')%></td>
        <td><%= raw url_present(artist.youtube_url)%></td>
        <td><%= raw url_present(artist.soundcloud_url)%></td>
        <td class='confirm-image'><%= raw url_present(artist.image.url)%></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_artist_path(artist), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      artist_path(artist),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_artist_path,
            :class => 'btn btn-primary' %>

