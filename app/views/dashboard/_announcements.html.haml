%h2 Announcements

.new_post.span6
	%h3 Make a Post
	%label Title
	%input.new_title{:type=>"text"}
	%textarea.new_post{:rows=>5}
	%button#create_post.btn Save

.prev_posts.span5
	%h3 Previous Posts
	%ul.prev_posts
		- @posts.each do |post|
			%li.post{:id => "post_#{post.id}"}
				%div.title=post.title
				%div.date=post.date
				%div.body=post.body
				%button.btn-mini.btn-danger.delete_post Delete



:javascript
	$(function(){
		$("#create_post").click(function(){
			createPost();
		});
		$(".delete_post").click(function(){
			deletePost(this);
		})
	});


