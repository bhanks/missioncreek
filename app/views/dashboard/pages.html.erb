<%- model_class = Page -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%- if flash[:notice] -%>
  <div class="span4">  
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= flash[:notice] %>
    </div>
  </div>
<%- end -%>

<table class="table table-bordered table-striped pages-admin">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th>Images</th>
      <th>Feature Order</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>

  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.title, edit_page_path(page) %></td>
        <td><%= raw popup(page.body,'popover', "Body") %></td>
        <td class='confirm-image'></td>
        <td><%= page.feature_order %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_page_path(page), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      page_path(page),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_page_path,
            :class => 'btn btn-primary' %>