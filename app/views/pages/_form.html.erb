<%= simple_form_for @page, :html => {:class => 'form-horizontal', :multipart => true } do |f| %>
  <%= f.input :title %>
  <%= f.input :body, :as => :text, :input_html => { :rows => 10, :class => 'input-xlarge', :id => "page_text" }  %>

  <%= f.input :parent , :collection => @pages  %>
  <%= f.input :feature_order , :collection => 1..3  %>
  <%= f.input :splash_image, :as => :file %>

  <%= f.button :submit %>
<% end %>

