- name = (event.show_title) ? event.title : event.headliners.map(&:name).join(" & ")
/.name_venue="#{name} @ #{event.venue.name}" 
.image
	%img{:src=>event.headliners.first.image}
.top
	.name=name
	@
	%a.venue{:href=>"#{event.venue.url}", :target=>"_other"}=event.venue.name
.bottom
	%a{:href=>event_path(event)}More Info
	|
	%a{:href=>event.ticket_url, :target=>"_other"}Get Tickets