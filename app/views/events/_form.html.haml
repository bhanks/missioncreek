- days = [["Monday 04/01",Date.parse("01/04/2013")],["Tuesday 04/02",Date.parse("02/04/2013")],["Wednesday 04/03",Date.parse("03/04/2013")],["Thursday 04/04",Date.parse("04/04/2013")],["Friday 04/05",Date.parse("05/04/2013")],["Saturday 04/06",Date.parse("06/04/2013")],["Sunday 04/07",Date.parse("07/04/2013")]]
- dates = [Date.parse("02/04/2013"),Date.parse("03/04/2013")]

= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label "Display with Title (otherwise displays with selected headliners)"
    = f.check_box :show_title
  .field
    = f.label Venue
    = f.collection_select :venue_id, Venue.all, :id, :name
  .field
    = f.label :date
    = f.select :date, options_for_select(days, @event.date.to_s)
  .field
    = f.label :door_time
    = f.time_select :door_time, :value => :start_time, :default => Time.parse("20:00"), :ampm => true
  .field
    = f.label :start_time
    = f.time_select :start_time, :value => :start_time, :default => Time.parse("21:00"), :ampm => true
  .field
    = f.label :free
    = f.check_box :free
  .field
    = f.label :soldout
    = f.check_box :soldout
  .field
    = f.label "Advance Price"
    = f.number_field :price_advance
  .field
    = f.label "Day of Ticket Price"
    = f.number_field :price_dayof
  .field
    = f.label :ticket_url
    = f.text_field :ticket_url
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
