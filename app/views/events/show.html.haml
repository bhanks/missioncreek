%p#notice= notice
%h2 Artists:
%ul
  - @event.artists.each do |artist|
    %li=artist.name

%p
  %b Title:
  = @event.title
%p
  %b Date:
  = @event.format_date
%p
  %b Door time:
  = @event.format_door_time
%p
  %b Start time:
  = @event.format_start_time
%p
  %b Free:
  = @event.free
%p
  %b Soldout:
  = @event.soldout
%p
  %b Price advance:
  = "$#{@event.price_advance}"
%p
  %b Price dayof:
  = "$#{@event.price_dayof}"
%p
  %b Ticket url:
  = @event.ticket_url
%p
  %b Description:
  = @event.description

= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Back', events_path
