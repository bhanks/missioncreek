.col-xs-8
  #carousel-front-page.row.carousel
    
    %ol.carousel-indicators
      %li.active{:data=>{"slide-to" =>"0", :target => "#carousel-front-page"}}
      %li{:data=>{"slide-to" =>"1", :target => "#carousel-front-page"}}
      %li{:data=>{"slide-to" =>"2", :target => "#carousel-front-page"}}
    .carousel-inner
      .item.active
        %img{:src=>"/assets/first.png"}
      .item
        %img{:src=>"/assets/second.png"}
      .item
        %img{:src=>"/assets/third.png"}

  .row.info
.col-xs-4
  .mailing-list
  .twitter

  
#overlay.modal.hide.fade
  .modal-body
    %a{:href=>"javascript:void(0)", :data => {:dismiss=>"modal"}}
      %img.overlay{:src=>asset_path("overlay.jpg")}

:javascript
  $('.carousel').carousel({
    interval: false
  });
  if(!/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) && !$.cookie("overlay"))
  {
    var date = new Date();
    var minutes = 60;
    date.setTime(date.getTime() + (minutes * 60 * 1000));
    $.cookie("overlay", "true",{expires: date})
    /*$("#overlay").modal()*/
  }
		
