			= render :partial => "features"
#overlay.modal.hide.fade
	.modal-body
		%img{:src=>asset_path("overlay.jpg")}
	.modal-footer
		%button.btn-primary{:href=>"javascript:void(0)", :data => {:dismiss=>"modal"}}Close

:javascript
	
	//if(!/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) && !$.cookie("overlay"))
	if(!/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent))
	{
		var date = new Date();
		var minutes = 60;
		date.setTime(date.getTime() + (minutes * 60 * 1000));
		$.cookie("overlay", "true",{expires: date})
		$("#overlay").modal()
	}
		