<%= simple_form_for @artist, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :bio, :as => :text, :input_html => { :rows => 9, :class => 'input-xlarge' }  %>
  <%= f.input :official_url, :as => :url%>
  <%= f.input :youtube_url, :as => :url%>
  <%= f.input :soundcloud_url, :as => :url%>
  <%= f.input :tier , :collection => 1..3 %>
  <%= f.button :submit %>
<% end %>