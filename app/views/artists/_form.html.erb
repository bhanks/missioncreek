<%= simple_form_for @artist, :html => {:class => 'form-horizontal', :multipart => true } do |f| %>
  <%= f.input :name %>
  <%= f.input :bio, :as => :text, :input_html => { :cols => 100, :rows => 9,:style=>"width:auto", :class => 'input-xlarge' }  %>
  <%= f.input :youtube_url, :as => :url%>
  <%= f.input :tier , :collection => 1..3 %>
  <%= f.input :image, :as => :file %>

  <%= f.button :submit %>
<% end %>
<div class='current-images'>
  <h3>Current Image For This Artist:</h3>
  <h4>Images will upload to <%= "artist/#{ENV['MEDIA_LOCATION']}" %></h4>
  <% if @artist.image.url %>
  <%= image_tag @artist.image.medium.url %>
    <div style="margin:15px">
      <%= link_to "Re-Crop Original",crop_artist_path(@artist), :class=>'btn'%>
    </div>
  <% end %>
  
</div>
